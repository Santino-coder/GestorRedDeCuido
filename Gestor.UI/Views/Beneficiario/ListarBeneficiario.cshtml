@model IEnumerable<Gestor.Models.Beneficiario>

@{
    ViewData["Title"] = "ListarBeneficiario";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">

    <title>ListarBeneficiario</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/ListarBeneficiario.css" rel="stylesheet" type="text/css" />


    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
          rel="stylesheet" />

    <!-- Bootstrap icons -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />

</head>
<body>

    <div class="container-fluid">
        <div class="container">

            <div class="d-flex justify-content-between align-items-lg-center py-3 flex-column flex-lg-row">
                <h2 class="h5 mb-3 mb-lg-0"><a href="../../pages/admin/customers.html" class="text-muted"><i class="bi bi-arrow-left-square me-2"></i></a> Lista de beneficiarios</h2>


            </div>

            <div class="card mb-4">
                <div class="card-body">

                    <div class="form-group pull-right">
                        <input type="text" class="search form-control" placeholder="Buscar">
                    </div>
                    <span class="counter pull-right"></span>
                    <table class="table table-hover table-bordered results">

                        <thead>
                            <tr>
                                <th scope="col">Identificación</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Apellidos</th>
                                <th scope="col">Distrito</th>
                                <th scope="col">Dirección</th>
                                <th scope="col">Teléfono</th>
                                <th scope="col">Alternativas</th>
                                <th scope="col">Observaciones</th>
                                <th scope="col">Estado </th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.DNI)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Apellidos)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Distrito)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Direccion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Telefono)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Alternativa1)
                                        <br />
                                        @Html.DisplayFor(modelItem => item.Alternativa2)
                                        <br />
                                        @Html.DisplayFor(modelItem => item.Alternativa3)
                                        <br />
                                        @Html.DisplayFor(modelItem => item.Alternativa4)
                                        <br />
                                        @Html.DisplayFor(modelItem => item.Alternativa5)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Estado)
                                    </td>
                                    <td>
                                        <div class="hstack gap-3">
                                            @Html.ActionLink("Detalles", "Detalles", new { id = item.idBeneficiario }, new { @class = "btn btn-primary btn-sm" })
                                        </div>
                                    </td>
                                </tr>
                            }
                        <tbody>
                    </table>
                </div>


            </div>

        </div>
    </div>

</body>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script src="~/js/ListarBeneficiario.js"></script>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
