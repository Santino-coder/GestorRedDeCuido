@model IEnumerable<Gestor.Models.Beneficiario>

@{
    ViewData["Title"] = "ListarBeneficiario";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>ListarBeneficiario</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Enlaces a archivos CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/_Layout.css" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    @Html.Partial("CantidadTotalBeneficiarios", Model.Count())
    <!-- Encabezado de la página -->
    <div class="card mb-4">
        <div class="card-body">
            <h4 style="text-align:center;">Lista de beneficiarios</h4>
            <hr />
            <!-- Barra de búsqueda -->
            <div class="form-group pull-right">
                <input type="text" class="search form-control" placeholder="Buscar">
            </div>
           
            <br />
            <span class="counter pull-right"></span>
            <!-- Tabla de beneficiarios -->
            <table class="table table-hover table-bordered results" id="miTabla">
                <thead>
                    <tr>
                        <th scope="col">Identificación</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellidos</th>
                        <th scope="col">Distrito</th>
                        <th scope="col">Dirección</th>
                        <th scope="col">Teléfono</th>
                        <th scope="col">Alternativas</th>
                        <th scope="col">Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DNI)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Apellidos)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Distrito)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Direccion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Telefono)
                            </td>
                            <td>
                                <!-- Muestra múltiples alternativas -->
                                @Html.DisplayFor(modelItem => item.Alternativa1)
                                <br />
                                @Html.DisplayFor(modelItem => item.Alternativa2)
                                <br />
                                @Html.DisplayFor(modelItem => item.Alternativa3)
                                <br />
                                @Html.DisplayFor(modelItem => item.Alternativa4)
                                <br />
                                @Html.DisplayFor(modelItem => item.Alternativa5)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Estado)
                            </td>
                            <td>
                                <!-- Enlace para ver detalles del beneficiario -->
                                <div class="hstack gap-3">
                                    @Html.ActionLink("Detalles", "Detalles", new { id = item.idBeneficiario }, new { @class = "btn btn-primary btn-sm" })
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
<!-- Inclusión de jQuery para funcionalidad de búsqueda -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- Inclusión del script "FuncionesParaTablas.js" para mejorar la funcionalidad de la tabla -->
<script src="~/js/FuncionesParaTablas.js"></script>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
