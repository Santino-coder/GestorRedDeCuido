@model Gestor.Models.Beneficiario

@{
    ViewData["Title"] = "Detalles";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">

    <title>Detalles</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/_Layout.css" asp-append-version="true" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />

</head>
<body>

    <div class="card mb-4" style="text-align:center">
        <div class="card-body">
            <h3 class="h6">Detalles de @Html.DisplayFor(model => model.Nombre)</h3>
            <hr />
            <dl class="row">

                <dt class="col-sm-2">
                    <th scope="col">Identificación</th>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DNI)
                </dd>
                <dt class="col-sm-2">
                    <th scope="col">Nombre</th>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-2">
                    <th scope="col">Apellidos</th>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Apellidos)
                </dd>
                <dt class="col-sm-2">
                    <th scope="col">Fecha de nacimiento</th>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FechaDeNacimiento)
                </dd>
                <dt class="col-sm-2">
                    <th scope="col">Edad</th>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Edad)
                </dd>
                <dt class="col-sm-2">
                    <th scope="col">Estado civil</th>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EstadoCivil)
                </dd>
                <dt class="col-sm-2">
                    <th scope="col">Distrito</th>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Distrito)
                </dd>
                <dt class="col-sm-2">
                    <th scope="col">Dirección</th>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Direccion)
                </dd>
                <dt class="col-sm-2">
                    <th scope="col">Teléfono</th>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Telefono)
                </dd>
                <dt class="col-sm-2">
                    <th scope="col">Ingreso económico y orígen</th>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IngresoEconomicoYOrigen)
                </dd>
                <dt class="col-sm-2">
                    <th scope="col">Fecha de ingreso</th>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FechaIngreso)
                </dd>
                <dt class="col-sm-2">
                    <th scope="col">Estado</th>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Estado)
                </dd>
                <dt class="col-sm-2">
                    <th scope="col">Persona encargada</th>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PersonaEncargada)
                </dd>
                <dt class="col-sm-2">
                    <th scope="col">Teléfono de la persona encargada</th>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NumeroPersonaEncargada)
                </dd>
                <dt class="col-sm-2">
                    <th scope="col">Observaciones</th>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Observaciones)
                </dd>
                <dt class="col-sm-2">
                    <th scope="col">Alternativas</th>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Alternativa1)
                    <br />
                    @Html.DisplayFor(model => model.Alternativa2)
                    <br />
                    @Html.DisplayFor(model => model.Alternativa3)
                    <br />
                    @Html.DisplayFor(model => model.Alternativa4)
                    <br />
                    @Html.DisplayFor(model => model.Alternativa5)
                </dd>
            </dl>
            <div class="d-grid gap-2 d-md-flex justify-content-md-begin">
                @Html.ActionLink("Editar", "EditarBeneficiario", new { id = Model.idBeneficiario }, new { @class = "btn btn-primary btn-sm" })

                <form asp-controller="DetalleAlternativa" asp-action="ObtenerDetallePorIdBeneficiario" method="get">
                    @Html.HiddenFor(model => model.idBeneficiario) <!-- Campo oculto para almacenar el idBeneficiario -->
                    <input type="submit" value="Ver detalles de alternativas" class="btn btn-primary btn-sm" />
                </form>

                <form asp-controller="DetalleAlternativa" asp-action="AgregarDetalleAlternativa" asp-route-id="@Model.idBeneficiario" method="get">
                    @Html.HiddenFor(model => model.idBeneficiario) <!-- Campo oculto para almacenar el idBeneficiario -->
                    <input type="submit" value="Agregar detalles de alternativas" class="btn btn-primary btn-sm" />
                </form>
                
                @Html.ActionLink("Lista de beneficiarios", "ListarBeneficiario", new { id = Model.idBeneficiario }, new { @class = "btn btn-danger btn-sm" })
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
