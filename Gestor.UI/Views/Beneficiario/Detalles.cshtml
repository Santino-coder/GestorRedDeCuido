@model Gestor.Models.Beneficiario

@{
    ViewData["Title"] = "Detalles";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Detalles de beneficiario</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Estilos CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/_Layout.css" asp-append-version="true" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="card mb-4">
        <div class="card-body">
            <h4 style="text-align:center;">Detalles de beneficiario</h4>
            <hr />
            <div id="html2pdf">
                <!-- Encabezado de la sección de detalles -->
                <h3 class="h6">Detalles de @Html.DisplayFor(model => model.Nombre)</h3>
                <hr />
                <dl class="row">
                    <!-- Pares de etiquetas y valores para mostrar detalles del beneficiario -->
                    <dt class="col-sm-2">
                        <th scope="col">Identificación</th>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DNI)
                    </dd>
                    <dt class="col-sm-2">
                        <th scope="col">Nombre</th>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                    <dt class="col-sm-2">
                        <th scope="col">Apellidos</th>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Apellidos)
                    </dd>
                    <dt class="col-sm-2">
                        <th scope="col">Fecha de nacimiento</th>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FechaDeNacimiento)
                    </dd>
                    <dt class="col-sm-2">
                        <th scope="col">Edad</th>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Edad)
                    </dd>
                    <dt class="col-sm-2">
                        <th scope="col">Estado civil</th>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.EstadoCivil)
                    </dd>
                    <dt class="col-sm-2">
                        <th scope="col">Distrito</th>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Distrito)
                    </dd>
                    <dt class="col-sm-2">
                        <th scope="col">Dirección</th>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Direccion)
                    </dd>
                    <dt class="col-sm-2">
                        <th scope="col">Teléfono</th>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Telefono)
                    </dd>
                    <dt class="col-sm-2">
                        <th scope="col">Ingreso económico y orígen</th>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IngresoEconomicoYOrigen)
                    </dd>
                    <dt class="col-sm-2">
                        <th scope="col">Fecha de ingreso</th>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FechaIngreso)
                    </dd>
                    <dt class="col-sm-2">
                        <th scope="col">Estado</th>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Estado)
                    </dd>
                    <dt class="col-sm-2">
                        <th scope="col">Persona encargada</th>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PersonaEncargada)
                    </dd>
                    <dt class="col-sm-2">
                        <th scope="col">Teléfono de la persona encargada</th>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.NumeroPersonaEncargada)
                    </dd>
                    <dt class="col-sm-2">
                        <th scope="col">Observaciones</th>
                    </dt>
                    <dd class="col-sm-10">
                        <pre style="font-family: inherit; font-size: inherit;">@Html.DisplayFor(model => model.Observaciones)</pre>
                    </dd>
                    <dt class="col-sm-2">
                        <th scope="col">Alternativas</th>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Alternativa1)
                        <br />
                        @Html.DisplayFor(model => model.Alternativa2)
                        <br />
                        @Html.DisplayFor(model => model.Alternativa3)
                        <br />
                        @Html.DisplayFor(model => model.Alternativa4)
                        <br />
                        @Html.DisplayFor(model => model.Alternativa5)
                    </dd>
                </dl>
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-begin">
                <!-- Botones y enlaces para realizar acciones relacionadas con el beneficiario -->
                @Html.ActionLink("Editar", "EditarBeneficiario", new { id = Model.idBeneficiario }, new { @class = "btn btn-primary btn-sm" })
                <form asp-controller="DetalleAlternativa" asp-action="ObtenerDetallePorIdBeneficiario" method="get">
                    <!-- Formulario para ver detalles de alternativas -->
                    @Html.HiddenFor(model => model.idBeneficiario) <!-- Campo oculto para almacenar el idBeneficiario -->
                    <input type="submit" value="Ver detalles de alternativas" class="btn btn-primary btn-sm" />
                </form>
                <form asp-controller="DetalleAlternativa" asp-action="AgregarDetalleAlternativa" asp-route-id="@Model.idBeneficiario" method="get">
                    <!-- Formulario para agregar detalles de alternativas -->
                    @Html.HiddenFor(model => model.idBeneficiario) <!-- Campo oculto para almacenar el idBeneficiario -->
                    <input type="submit" value="Agregar detalles de alternativas" class="btn btn-primary btn-sm" />
                </form>
                @Html.ActionLink("Lista de beneficiarios", "ListarBeneficiario", new { id = Model.idBeneficiario }, new { @class = "btn btn-danger btn-sm" })
                <!-- Enlace para descargar un PDF al hacer clic en el botón -->
                <a href="javascript:generatePDF()" class="btn btn-danger btn-sm">Descargar PDF
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-pdf-fill" viewBox="0 0 16 16">
                        <path d="M5.523 12.424c.14-.082.293-.162.459-.238a7.878 7.878 0 0 1-.45.606c-.28.337-.498.516-.635.572a.266.266 0 0 1-.035.012.282.282 0 0 1-.026-.044c-.056-.11-.054-.216.04-.36.106-.165.319-.354.647-.548m2.455-1.647c-.119.025-.237.05-.356.078a21.148 21.148 0 0 0 .5-1.05 12.045 12.045 0 0 0 .51.858c-.217.032-.436.07-.654.114m2.525.939a3.881 3.881 0 0 1-.435-.41c.228.005.434.022.612.054.317.057.466.147.518.209a.095.095 0 0 1 .026.064.436.436 0 0 1-.06.2.307.307 0 0 1-.094.124.107.107 0 0 1-.069.015c-.09-.003-.258-.066-.498-.256M8.278 6.97c-.04.244-.108.524-.2.829a4.86 4.86 0 0 1-.089-.346c-.076-.353-.087-.63-.046-.822.038-.177.11-.248.196-.283a.517.517 0 0 1 .145-.04c.013.03.028.092.032.198.005.122-.007.277-.038.465z" />
                        <path fill-rule="evenodd" d="M4 0h5.293A1 1 0 0 1 10 .293L13.707 4a1 1 0 0 1 .293.707V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2m5.5 1.5v2a1 1 0 0 0 1 1h2zM4.165 13.668c.09.18.23.343.438.419.207.075.412.04.58-.03.318-.13.635-.436.926-.786.333-.401.683-.927 1.021-1.51a11.651 11.651 0 0 1 1.997-.406c.3.383.61.713.91.95.28.22.603.403.934.417a.856.856 0 0 0 .51-.138c.155-.101.27-.247.354-.416.09-.181.145-.37.138-.563a.844.844 0 0 0-.2-.518c-.226-.27-.596-.4-.96-.465a5.76 5.76 0 0 0-1.335-.05 10.954 10.954 0 0 1-.98-1.686c.25-.66.437-1.284.52-1.794.036-.218.055-.426.048-.614a1.238 1.238 0 0 0-.127-.538.7.7 0 0 0-.477-.365c-.202-.043-.41 0-.601.077-.377.15-.576.47-.651.823-.073.34-.04.736.046 1.136.088.406.238.848.43 1.295a19.697 19.697 0 0 1-1.062 2.227 7.662 7.662 0 0 0-1.482.645c-.37.22-.699.48-.897.787-.21.326-.275.714-.08 1.103z" />
                    </svg>
                </a>
            </div>
        </div>
    </div>
</body>
<!-- Inclusión de la biblioteca jspdf para generar PDFs -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.4/jspdf.debug.js"></script>
<!-- Inclusión del script para generar PDF -->
<script src="~/js/PDF.js"></script>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
