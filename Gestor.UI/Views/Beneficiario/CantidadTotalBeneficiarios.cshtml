@model int

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">

    <title>Cantindad total de beneficiarios</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/_Layout.css" asp-append-version="true" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />

</head>
<body>
    <div class="card mb-4" style="text-align:center">
        <div class="card-body">
            <h3 class="h6">Cantidad total de beneficiarios</h3>
            <hr />
            <table class="table table-hover table-bordered results">

                <thead>
                    <tr>
                        <th scope="col">Activos</th>
                        <th scope="col">Inactivos</th>
                        <th scope="col">Fallecidos</th>
                        <th scope="col">Total</th>
                </thead>
                <tbody>

                    <tr>
                        <td>@ViewBag.CantidadActivos</td>
                        <td>@ViewBag.CantidadInactivos</td>
                        <td>@ViewBag.CantidadFallecidos</td>
                        <td>@Model</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}