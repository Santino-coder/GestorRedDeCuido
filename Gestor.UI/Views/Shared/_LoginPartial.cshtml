@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/_Layout.css" asp-append-version="true" />

<ul class="navbar">
    <!-- Alinea los elementos a la derecha -->
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark disabled-link" style="cursor: pointer; margin-right: 9px;">@User.Identity?.Name</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-danger" style="margin-right: 18px; border-radius: 50%; border: solid 1px; padding: 3px; width: 32px; height: 32px;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-power" viewBox="0 0 16 16">
                        <path d="M7.5 1v7h1V1z" />
                        <path d="M3 8.812a4.999 4.999 0 0 1 2.578-4.375l-.485-.874A6 6 0 1 0 11 3.616l-.501.865A5 5 0 1 1 3 8.812" />
                    </svg>
                </button>

            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-primary" style="margin-right: 9px; border: solid 1px;" asp-area="Identity" asp-page="/Account/Register">Registrarte</a>

            <a class="btn btn-primary" style="margin-right: 18px; border: solid 1px;" asp-area="Identity" asp-page="/Account/Login">Iniciar Sesión</a>
        </li>
    }
</ul>
