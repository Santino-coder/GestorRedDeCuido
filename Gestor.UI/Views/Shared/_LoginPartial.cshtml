@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/_Layout.css" asp-append-version="true" />

<ul class="navbar">
    <!-- Alinea los elementos a la derecha -->
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark disabled-link" style="cursor: pointer; margin-right: 9px;">@User.Identity?.Name</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">

                <button type="submit" class="btn btn-danger" style="margin-right: 9px; border: solid 1px;">Cerrar Sesión </button>

            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-primary" style="margin-right: 9px; border: solid 1px;" asp-area="Identity" asp-page="/Account/Register">Registrarte</a>

            <a class="btn btn-primary" style="margin-right: 18px; border: solid 1px;" asp-area="Identity" asp-page="/Account/Login">Iniciar Sesión</a>
        </li>
    }
</ul>
