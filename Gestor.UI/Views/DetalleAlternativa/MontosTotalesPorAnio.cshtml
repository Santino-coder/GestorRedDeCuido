@model Gestor.UI.Models.MontosTotalesViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">

    <title>CantidadTotalBeneficiaruos</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/_Layout.css" asp-append-version="true" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />

</head>
<body>


    <section class="card mb-4" style="text-align:center">
        <div class="card-body">
            @Html.ActionLink("Regresar a montos totales", "MontosTotales","DetalleAlternativa", new { @class = "btn btn-danger btn-sm" })

            <div id="TotalPorAnio" class="card mb-4 contenedor-div" style="text-align:center;">
                <div class="card-body">
                    @if (Model.MontoPorAnio != null && Model.MontoPorAnio.Any())
                    {

                        <h3 class="h6">Montos totales por año</h3>
                        <hr />

                        <table class="table table-hover table-bordered results">
                            <thead>
                                <tr>
                                    <th>Año</th>
                                    <th>Monto Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.MontoPorAnio)
                                {
                                    <tr>
                                        <td>@item.Anio</td>
                                        <td>@item.MontoTotalAnio.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </section>

</body>

</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}