@model Gestor.UI.Models.MontosTotalesViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Montos Totales por Beneficiario</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/_Layout.css" asp-append-version="true" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <section class="card mb-4" style="text-align:center">
        <div class="card-body">
            @Html.ActionLink("Regresar a montos totales", "MontosTotales","DetalleAlternativa", new { @class = "btn btn-danger btn-sm" })
            <h3 class="h6">Montos Totales por Beneficiario</h3>
            <hr />

            @using (Html.BeginForm("MontosTotalesPorBeneficiario", "DetalleAlternativa", FormMethod.Post, new { name = "formBeneficiario" }))
            {
                <label for="idBeneficiario">Selecciona un beneficiario:</label>
                <select name="idBeneficiario" id="idBeneficiario">
                    @foreach (var beneficiario in Model.Beneficiarios)
                    {
                        <option value="@beneficiario.idBeneficiario">@beneficiario.Nombre</option>
                    }
                </select>
                <button type="submit" class="btn btn-primary btn-sm btn-icon-text">Calcular Monto Total</button>
            }

            @if (Model.Beneficiario != null)
            {
                <br />
                <h3 class="h6">Monto total de: @Model.Beneficiario.Nombre</h3>
            }

            @if (Model.MontoPorBeneficiario > 0)
            {

                <table class="table table-hover table-bordered results">
                    <thead>
                        <tr>
                            <th>Mes Beneficiario</th>
                            <th>Monto Total Beneficiario</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.MontoPorBeneficiarios)
                        {
                            <tr>
                                <td>@item.MesBeneficiario</td>
                                <td>@item.MontoTotalBeneficiario.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
        </div>
    </section>

    <script>
        function mostrarDiv(idDiv) {
            var div = document.getElementById(idDiv);
            if (div.style.display === 'none' || div.style.display === '') {
                div.style.display = 'block';
            } else {
                div.style.display = 'none';
            }
        }
    </script>
</body>
</html>
