@model Gestor.Models.MontosTotalesViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Montos Totales</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Enlaces a los archivos de hojas de estilo personalizados -->
    <link rel="stylesheet" href="~/css/_Layout.css" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/css/Totales.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="card mb-4" style="text-align:center">
        <div class="card-body">
            <h4 style="text-align:center;">Montos totales</h4>
            <hr />
            <div class="main">
                <div class="box-container">
                    <!-- Cuadro 1: Enlace a Montos Totales por Mes -->
                    <div class="box box1">
                        <div class="text">
                            <!-- Enlace a la vista de Montos Totales por Mes -->
                            <h2 class="topic-heading">@Html.ActionLink("Mes", "MontosTotalesPorMes","DetalleAlternativa", new {}, new { @class = "no-link-style" })</h2>
                            <h2 class="topic">Montos totales por</h2>
                        </div>
                    </div>

                    <!-- Cuadro 2: Enlace a Montos Totales por Año -->
                    <div class="box box2">
                        <div class="text">
                            <!-- Enlace a la vista de Montos Totales por Año -->
                            <h2 class="topic-heading"> @Html.ActionLink("Año", "MontosTotalesPorAnio","DetalleAlternativa", new {}, new { @class = "no-link-style" })</h2>
                            <h2 class="topic">Montos totales por</h2>
                        </div>
                    </div>

                    <!-- Cuadro 3: Enlace a Montos Totales por Beneficiario -->
                    <div class="box box3">
                        <div class="text">
                            <!-- Enlace a la vista de Montos Totales por Beneficiario -->
                            <h2 class="topic-heading">@Html.ActionLink("Beneficiario", "MontosTotalesPorBeneficiario", "DetalleAlternativa", new { }, new { @class = "no-link-style" })</h2>
                            <h2 class="topic">Montos totales por</h2>
                        </div>
                    </div>

                    <!-- Cuadro 4: Enlace a Montos Totales por Alternativa -->
                    <div class="box box4">
                        <div class="text">
                            <!-- Enlace a la vista de Montos Totales por Alternativa -->
                            <h2 class="topic-heading">  @Html.ActionLink("Alternativa", "MontosTotalesPorAlternativa", "DetalleAlternativa", new {}, new { @class = "no-link-style" })</h2>
                            <h2 class="topic">Montos totales por</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}