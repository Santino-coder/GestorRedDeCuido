@model Gestor.UI.Models.MontosTotalesViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">

    <title>CantidadTotalBeneficiaruos</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/_Layout.css" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/css/Totales.css" rel="stylesheet" type="text/css" />

</head>
<body>
    <div class="card mb-4" style="text-align:center">
        <div class="card-body">
            <div class="main">
                <div class="box-container">
                    <div class="box box1">
                        <div class="text">
                            <h2 class="topic-heading">@Html.ActionLink("Mes", "MontosTotalesPorMes","DetalleAlternativa", null, new { @class = "no-link-style" })</h2>
                            <h2 class="topic">Montos totales por</h2>
                        </div>
                    </div>

                    <div class="box box2">
                        <div class="text">
                            <h2 class="topic-heading"> @Html.ActionLink("Año", "MontosTotalesPorAnio","DetalleAlternativa", null, new { @class = "no-link-style" })</h2>
                            <h2 class="topic">Montos totales por</h2>
                        </div>
                    </div>

                    <div class="box box3">
                        <div class="text">
                            <h2 class="topic-heading">@Html.ActionLink("Beneficiario", "MontosTotalesPorBeneficiario", "DetalleAlternativa", null, new { @class = "no-link-style" })</h2>
                            <h2 class="topic">Montos totales por</h2>
                        </div>
                    </div>

                    <div class="box box4">
                        <div class="text">
                            <h2 class="topic-heading">  @Html.ActionLink("Alternativa", "MontosTotalesPorAlternativa","DetalleAlternativa", null, new { @class = "no-link-style" })</h2>
                            <h2 class="topic">Montos totales por</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}