@model Gestor.UI.Models.MontosTotalesViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">

    <title>CantidadTotalBeneficiaruos</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/_Layout.css" asp-append-version="true" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />

</head>
<body>
    <div class="card mb-4" style="text-align:center">
        <div class="card-body">
            @if (Model.MontoPorMes != null && Model.MontoPorMes.Any())
            {

                <h3 class="h6">Montos totales por mes</h3>
                <hr />

                <table class="table table-hover table-bordered results">
                    <thead>
                        <tr>
                            <th scope="col">Fecha</th>
                            <th scope="col">Monto</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.MontoPorMes)
                        {
                            <tr>
                                <td>@item.Mesanio</td>
                                <td>@item.MontoTotalMes.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

    <div class="card mb-4" style="text-align:center">
        <div class="card-body">
            @if (Model.MontoPorAnio != null && Model.MontoPorAnio.Any())
            {

                <h3 class="h6">Montos totales por año</h3>
                <hr />

                <table class="table table-hover table-bordered results">
                    <thead>
                        <tr>
                            <th>Año</th>
                            <th>Monto Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.MontoPorAnio)
                        {
                            <tr>
                                <td>@item.Anio</td>
                                <td>@item.MontoTotalAnio.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

    <div class="card mb-4" style="text-align:center">
        <div class="card-body">
            <h3 class="h6">Monto total por beneficiario</h3>
            <hr />

            @using (Html.BeginForm("CalcularMontoPorBeneficiario", "DetalleAlternativa", FormMethod.Get, new { name = "formBeneficiario" }))
            {
                <label for="idBeneficiario">Selecciona un beneficiario:</label>
                <select name="idBeneficiario" id="idBeneficiario">
                    @for (var i = 0; i < Model.Beneficiarios.Count; i++)
                    {
                        var beneficiario = Model.Beneficiarios[i];
                        <option value="@beneficiario.idBeneficiario">@beneficiario.Nombre</option>
                    }
                </select>
                <button type="submit" class="btn btn-primary btn-sm btn-icon-text">Monto total</button>


                @if (Model.Beneficiario != null)
                {
                    <br />
                    <h3 class="h6">Monto total de: @Model.Beneficiario.Nombre</h3>

                }

                @if (Model.MontoPorBeneficiario > 0)
                {


                    @foreach (var item in Model.MontoPorBeneficiarios)
                    {
                        <table class="table table-hover table-bordered results">
                            <thead>
                                <tr>
                                    <th>@item.MesBeneficiario</th>
                                </tr>
                                <tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@item.MontoTotalBeneficiario.ToString("C")</td>
                                </tr>
                            </tbody>
                        </table>
                    }
                }
            }
        </div>
    </div>
    

    <div class="card mb-4" style="text-align:center">
        <div class="card-body">
            <h3 class="h6">Monto total por alternativa</h3>
            <hr />

            @using (Html.BeginForm("CalcularMontoPorAlternativa", "DetalleAlternativa", FormMethod.Get, new { name = "formAlternativa" }))
            {
                <label for="AlternativaSeleccionada">Selecciona una alternativa:</label>
                <select name="AlternativaSeleccionada" id="AlternativaSeleccionada">
                    <option value="Alimentación">Alimentación</option>
                    <option value="Artículos de uso personal e higiene">Artículos de uso personal e higiene</option>
                    <option value="Medicamentos e implementos de salud">Medicamentos e implementos de salud </option>
                    <option value="Atención social en salud integral">Atención social en salud integral</option>
                    <option value=" Productos de apoyo o ayudas técnicas">Productos de apoyo o ayudas técnicas</option>
                    <option value="Equipamiento de casa"> Equipamiento de casa</option>
                    <option value="Alquiler de vivienda, servicios básicos, municipales y trámites migratorios"> Alquiler de vivienda, servicios básicos, municipales y trámites migratorios</option>
                    <option value="Familias Solidarias">Familias Solidarias</option>
                    <option value="Servicios Básicos de atención en el domicilio y Servicios para la atención y cuidado especializado">Servicios Básicos de atención en el domicilio y Servicios para la atención y cuidado especializado</option>
                    <option value="Hogares comunitarios">Hogares comunitarios</option>
                    <option value="Transporte y combustible">Transporte y combustible</option>
                    <option value="Promoción y prevención de la salud">Promoción y prevención de la salud </option>
                    <option value="Institucionalización"> Institucionalización</option>
                    <option value="Mejoras habitacionales">Mejoras habitacionales</option>
                    <!-- Agrega opciones para las otras alternativas -->
                </select>
                <button type="submit" class="btn btn-primary btn-sm btn-icon-text">Calcular Monto</button>
            }

            @if (!string.IsNullOrEmpty(Model.AlternativaSeleccionada))
            {
                <h3 class="h6">Monto total de la alternativa: @Model.AlternativaSeleccionada</h3>
                <p>Monto total: @Model.MontoMensualPorAlternativa.ToString("C")</p>

                <h3 class="h6">Montos por mes de la alternativa:</h3>
                <table class="table table-hover table-bordered results">
                    <thead>
                        <tr>
                            <th>Mes</th>
                            <th>Monto</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.MontoMensualDeAlternativa)
                        {
                            <tr>
                                <td>@item.Mesanio</td>
                                <td>@item.MontoTotalMes.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>




</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}